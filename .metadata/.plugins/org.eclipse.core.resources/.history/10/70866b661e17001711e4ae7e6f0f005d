package algorithms.sorting;

import java.util.Arrays;
import java.util.Scanner;

public class FraudulentActivityNotification {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int N = in.nextInt();
		int days = in.nextInt();
		int[] spendArray = new int[N];
		for(int i=0; i<N; i++){
			spendArray[i] = in.nextInt();
		}
		in.close();
		
		int offset = 0;
		int[] tmpArray = new int[days];
		int fraudulentCounter = 0;
		while (offset + days + 1 < N) {
			for (int i=0; i<days; i++) {
				tmpArray[i] = spendArray[offset + days];
			}
			Arrays.sort(tmpArray);
			int meanX2 = (days%2==0) ? tmpArray[N/2] + tmpArray[N/2+1] : tmpArray[N/2+1];
			if (spendArray[offset + days + 1]>=meanX2) {
				fraudulentCounter++;
			}
		}
		
		System.out.println(fraudulentCounter);
	}

}
