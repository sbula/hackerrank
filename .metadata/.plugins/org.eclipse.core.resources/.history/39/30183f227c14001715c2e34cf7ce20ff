package algorithms.constructiveAlgorithms;

import java.util.Arrays;
import java.util.Scanner;

public class Bonetrousle {

    public static void main(String[] args) {
    	Scanner in = new Scanner(System.in);
    	int trips = in.nextInt();
    	for (int i=0; i<trips; i++) {
    		long sticks = in.nextLong();
    		long stored = in.nextLong();
    		int boxes = in.nextInt();
    		
    		long availableSticks = stored * (stored+1l)/2;
    		long maxSticksBuy = availableSticks-((stored-(long)boxes)*(stored-(long)boxes+1)/2);
    		long minSticksBuy = ((long)boxes) * ((long)boxes+1)/2;
    		
    		if (stored<(long)boxes || availableSticks<sticks || maxSticksBuy<sticks || sticks<minSticksBuy) {
    			System.out.println("DEBUG: stored          = " + stored);
    			System.out.println("DEBUG: boxes           = " + boxes);
    			System.out.println("DEBUG: sticks          = " + sticks);
    			System.out.println("DEBUG: availableSticks = " + availableSticks);
    			System.out.println("DEBUG: maxSticksBuy    = " + maxSticksBuy);
    			System.out.println("DEBUG: minSticksBuy    = " + minSticksBuy);
    			System.out.println(-1);
    			continue;
    		}
    		
    		long[] buyList = new long[boxes];
    		for(int k=0; k<buyList.length; k++) {
    			buyList[k] = k+1;
    		}
    		long sticksInBasket = minSticksBuy;
    		int xChgInd = 0;
    		long minAvailable = (long)boxes+1;
    		long maxAvailable = stored;
    		while(xChgInd<buyList.length && sticksInBasket<sticks) {
    			long diff = sticks - sticksInBasket;
    			if (diff<maxAvailable-buyList[xChgInd]) {
    				if (minAvailable<=buyList[xChgInd]+diff) {
    					sticksInBasket += diff;
    					buyList[xChgInd] += diff; 
    				} else {
    					xChgInd = buyList.length-(int)diff;
    					buyList[xChgInd] = minAvailable;
    					sticksInBasket += diff;
    				}
    			} else {
    				sticksInBasket += maxAvailable-buyList[xChgInd];
    				buyList[xChgInd] = maxAvailable;
    				maxAvailable--;
    				xChgInd++;
    			}
    		}
    		
  //  		Arrays.sort(buyList);
    		long sum =0;
    		for (int n=0; n<buyList.length; n++) {
    			sum +=buyList[n];
  //  			System.out.print(buyList[n] + " ");
    		}
    		if (sum == sticks) {
    			System.out.println("DEBUG: true, sticksInBasket = " + sum);
    		} else {
    			System.out.println("DEBUG: false, sticksInBasket = " + sum + " expected: " + sticks);
    		}
 //   		System.out.println(buyList[buyList.length-1]);
    	}
    	in.close();
    }

}
